
@{
    ViewBag.Title = "create group";
}

<div class="title col-md-12" style="padding: 0;">
    <h2>Creeaza un grup nou</h2>
</div>

<form class="form col-md-4" action="/Groups/New" method="POST">
    @Html.Label("GroupName", "Numele grupului")
    @Html.TextBox("GroupName", null, new { @class = "form-control" })
    @Html.ValidationMessage("GroupName", null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Description", "Descrierea grupului")
    @Html.TextBox("Description", null, new { @class = "form-control" })
    @Html.ValidationMessage("Description", null, new { @class = "text-danger" })

    <br />
    <button class="btn btn-sm btn-success" type="submit">Creeaza grup</button>
</form>