
@{
    ViewBag.Title = "Index";
}

<h2>Index Groups</h2>

@if (TempData.ContainsKey("message"))
 {
    <h1>@ViewBag.message</h1>
 }
<br />

@foreach (DAW_social_platform.Models.Group group in ViewBag.groups)
 {
    <div>
        <p><b>@group.GroupName</b></p>
        <br />
        <p>Created by <b>@group.User.UserName</b></p>

        <a class="btn btn-success" href="/Groups/Show/@group.GroupId">Afisare grup</a>
    </div>
    <hr />
 }
<br />
<a class="btn btn-primary" href="/Groups/New">Creeaza grup nou</a>

